<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
    <import type="android.view.View"/>
        <variable
            name="task"
            type="com.example.taskapp.database.entities.TaskMinimal" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/task_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/task_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:text="@{@string/task_name(task.name)}"
                android:textAlignment="center"
                android:textColor="@color/cardview_light_background"
                android:textSize="20sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/task_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:text="@{@string/task_description(task.description)}"
                android:textAlignment="center"
                android:textColor="@color/cardview_light_background"
                android:textSize="20sp"
                android:visibility='@{task.description.equalsIgnoreCase("")  ? View.GONE : View.VISIBLE}'
                tools:text="text" />




            <!--            <com.google.android.material.button.MaterialButton-->


            <!--                app:layout_constraintTop_toBottomOf="@id/task_name"-->
            <!--                android:id="@+id/details_btn"-->
            <!--                android:layout_width="wrap_contkent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="@string/details"-->
            <!--                android:textSize="20sp" />-->


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
