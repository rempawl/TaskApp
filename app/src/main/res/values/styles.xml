<resources xmlns:tools="http://schemas.android.com/tools">



    <style name="DefaultBodyTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AddEditTaskEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/design_default_color_background</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:importantForAutofill" tools:targetApi="o">no</item>
    </style>
    <style name="MultiLineAddEditTaskEditTextStyle" parent="AddEditTaskEditTextStyle">
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="ShortMessageAddEditTaskEditTextStyle" parent="AddEditTaskEditTextStyle">
        <item name="android:inputType">textShortMessage</item>
    </style>

    <style name="VerticalWrapLinearLayoutStyle" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="VerticalMatchLinearLayoutStyle" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>



    <style name="WideButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="backgroundTint">@color/darkBlue</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DefaultHeadlineTextAppearance" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/design_default_color_background</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="DefaultRadioGroupStyle" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">10dp</item>
    </style>


    <style name="DefaultTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>

    </style>
    <style name="WhiteTextViewStyle" parent="DefaultTextViewStyle">
        <item name="android:textColor">@color/design_default_color_background</item>
    </style>

    <style name="ErrorTextViewStyle" parent="DefaultTextViewStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#AF0B0B</item>

    </style>

    <style name="DefaultSwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:textAlignment">center</item>

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">10dp</item>

        <item name="colorControlActivated">@color/green</item>
        <item name="colorSwitchThumbNormal">@color/material_on_primary_disabled</item>
        <item name="android:colorForeground">#C50808</item>
    </style>

</resources>
